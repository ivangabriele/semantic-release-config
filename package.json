{
  "name": "@ivangabriele/semantic-release-config",
  "description": "My most commonly used Semantic Release configurations.",
  "license": "MIT",
  "version": "4.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --all --parallel --topological run build",
    "release": "./node_modules/.bin/semantic-release",
    "release:check": "./node_modules/.bin/semantic-release --dry-run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.6.0",
    "@ivangabriele/commitlint-config": "1.1.0",
    "@ivangabriele/prettier-config": "4.0.1",
    "@ivangabriele/semantic-release-config-monorepo": "workspace:*",
    "commitlint": "18.6.0",
    "husky": "9.0.10",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "*.{json,md,yaml,yml}": "prettier --write"
  },
  "packageManager": "yarn@4.1.0",
  "prettier": "@ivangabriele/prettier-config",
  "release": {
    "extends": "@ivangabriele/semantic-release-config-monorepo"
  },
  "resolutions": {
    "minimist": ">=1.2.6",
    "npm/chalk": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivangabriele/semantic-release-config.git"
  }
}
